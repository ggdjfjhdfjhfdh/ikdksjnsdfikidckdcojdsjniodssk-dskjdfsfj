---

<Layout 
  title="Cybersecurity Services - Comprehensive Solutions | Sesecpro"
  description="Specialized cybersecurity services: audits, pentesting, hardening, incident response, GDPR consulting, and technical training."
  lang="en"
>
  <!-- Hero Section -->
  <Section 
    title="Cybersecurity Services"
    subtitle="Specialized solutions that protect today and scale tomorrow"
    background="gradient"
    padding="xl"
    centered={true}
  >
    <div class="hero-content">
      <p class="hero-description">
        Each service is designed for companies that understand cybersecurity 
        is an investment, not an expense. Proven methodologies, cutting-edge tools, 
        and a practical approach that delivers measurable results.
      </p>
      <div class="hero-stats">
        <div class="stat">
          <div class="stat-number">500+</div>
          <div class="stat-label">Completed audits</div>
        </div>
        <div class="stat">
          <div class="stat-number">99.8%</div>
          <div class="stat-label">Guaranteed uptime</div>
        </div>
        <div class="stat">
          <div class="stat-number">24/7</div>
          <div class="stat-label">Incident response</div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Main Services -->
  {mainServices.map((service, index) => (
    <Section 
      id={service.id}
      background={index % 2 === 0 ? 'default' : 'soft'}
      padding="xl"
    >
      <div class="service-layout">
        <div class="service-header">
          <h2 class="service-title">{service.title}</h2>
          <p class="service-subtitle">{service.subtitle}</p>
          <p class="service-description">{service.description}</p>
        </div>
        
        <div class="service-content">
          <!-- Problem -->
          <div class="service-block problem-block">
            <h3 class="block-title">
              <svg class="block-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                <line x1="12" y1="9" x2="12" y2="13"/>
                <line x1="12" y1="17" x2="12.01" y2="17"/>
              </svg>
              The Problem
            </h3>
            <p class="block-content">{service.problem}</p>
          </div>
          
          <!-- Solution -->
          <div class="service-block solution-block">
            <h3 class="block-title">
              <svg class="block-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22,4 12,14.01 9,11.01"/>
              </svg>
              Our Solution
            </h3>
            <p class="block-content">{service.solution}</p>
          </div>
          
          <!-- Benefits -->
          <div class="service-block benefits-block">
            <h3 class="block-title">
              <svg class="block-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22,12 18,12 15,21 9,3 6,12 2,12"/>
              </svg>
              Key Benefits
            </h3>
            <ul class="benefits-list">
              {service.benefits.map((benefit) => (
                <li class="benefit-item">{benefit}</li>
              ))}
            </ul>
          </div>
        </div>
        
        <div class="service-details">
          <div class="details-grid">
            <!-- Features -->
            <div class="detail-card">
              <h4 class="detail-title">What's included?</h4>
              <ul class="detail-list">
                {service.features.map((feature) => (
                  <li class="detail-item">{feature}</li>
                ))}
              </ul>
            </div>
            
            <!-- Deliverables -->
            <div class="detail-card">
              <h4 class="detail-title">Deliverables</h4>
              <ul class="detail-list">
                {service.deliverables.map((deliverable) => (
                  <li class="detail-item">{deliverable}</li>
                ))}
              </ul>
            </div>
          </div>
          
          <div class="service-cta">
            <Button 
              href={`/en/contact?service=${service.id}`}
              variant="primary"
              size="lg"
              icon="arrow-up-right"
              iconPosition="right"
              className="focus-ring"
              ariaLabel={`Request ${service.title}`}>
              Request {service.title}
            </Button>
          </div>
        </div>
      </div>
    </Section>
  ))}

  <!-- Final CTA -->
  <BigCTA 
    title="Can't find what you're looking for?"
    subtitle="Every company has unique needs. Let's talk about how we can adapt our services to your specific situation."
    primaryButton={{
      text: "Custom consultation",
      href: "/en/contact?type=consultation",
      variant: "primary"
    }}
    secondaryButton={{
      text: "View methodology",
      href: "/en/methodology",
      variant: "outline"
    }}
    background="gradient"
    size="large"
  />
</Layout>

<style>
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .hero-description {
    font-size: var(--fs-body);
    color: var(--fg-dim);
    line-height: 1.7;
    margin-bottom: var(--sp-8);
  }
  
  .hero-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--sp-6);
    margin-top: var(--sp-8);
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-number {
    font-size: var(--fs-h2);
    font-weight: 700;
    color: var(--accent);
    line-height: 1;
    margin-bottom: var(--sp-2);
  }
  
  .stat-label {
    font-size: 14px;
    color: var(--fg-dim);
    font-weight: 500;
  }
  
  /* Service Layout */
  .service-layout {
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .service-header {
    text-align: center;
    margin-bottom: var(--sp-12);
  }
  
  .service-title {
    font-size: var(--fs-h1);
    font-weight: 700;
    color: var(--fg);
    margin-bottom: var(--sp-3);
    line-height: 1.2;
  }
  
  .service-subtitle {
    font-size: var(--fs-h3);
    color: var(--accent);
    font-weight: 500;
    margin-bottom: var(--sp-4);
  }
  
  .service-description {
    font-size: var(--fs-body);
    color: var(--fg-dim);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .service-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--sp-8);
    margin-bottom: var(--sp-12);
  }
  
  .service-block {
    background: var(--glass);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--sp-6);
    backdrop-filter: blur(10px);
  }
  
  .problem-block {
    border-left: 4px solid #ff6b6b;
  }
  
  .solution-block {
    border-left: 4px solid var(--accent);
  }
  
  .benefits-block {
    border-left: 4px solid var(--accent-2);
  }
  
  .block-title {
    display: flex;
    align-items: center;
    gap: var(--sp-3);
    font-size: var(--fs-h3);
    font-weight: 600;
    color: var(--fg);
    margin-bottom: var(--sp-4);
  }
  
  .block-icon {
    color: var(--accent);
  }
  
  .problem-block .block-icon {
    color: #ff6b6b;
  }
  
  .benefits-block .block-icon {
    color: var(--accent-2);
  }
  
  .block-content {
    color: var(--fg-dim);
    line-height: 1.6;
    margin: 0;
  }
  
  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .benefit-item {
    display: flex;
    align-items: flex-start;
    gap: var(--sp-3);
    margin-bottom: var(--sp-3);
    color: var(--fg-dim);
    line-height: 1.5;
  }
  
  .benefit-item::before {
    content: '✓';
    color: var(--accent);
    font-weight: bold;
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  .service-details {
    margin-top: var(--sp-12);
  }
  
  .details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--sp-6);
    margin-bottom: var(--sp-8);
  }
  
  .detail-card {
    background: var(--glass);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--sp-6);
    backdrop-filter: blur(10px);
  }
  
  .detail-title {
    font-size: var(--fs-h3);
    font-weight: 600;
    color: var(--fg);
    margin-bottom: var(--sp-4);
  }
  
  .detail-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .detail-item {
    display: flex;
    align-items: flex-start;
    gap: var(--sp-2);
    margin-bottom: var(--sp-3);
    color: var(--fg-dim);
    line-height: 1.5;
    font-size: 15px;
  }
  
  .detail-item::before {
    content: '•';
    color: var(--accent);
    font-weight: bold;
    flex-shrink: 0;
  }
  
  .service-cta {
    text-align: center;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hero-stats {
      grid-template-columns: 1fr;
      gap: var(--sp-4);
    }
    
    .service-content {
      gap: var(--sp-6);
    }
    
    .service-block {
      padding: var(--sp-4);
    }
    
    .details-grid {
      grid-template-columns: 1fr;
      gap: var(--sp-4);
    }
    
    .detail-card {
      padding: var(--sp-4);
    }
  }
  
  @media (min-width: 1024px) {
    .service-content {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>