<style>
  .legal-content {
    max-width: 800px;
    margin: 0 auto;
    color: var(--fg-dim);
    line-height: 1.7;
  }
  
  .legal-section {
    margin-bottom: var(--space-8);
  }
  
  .legal-section h3 {
    color: var(--fg);
    font-size: var(--fs-h3);
    font-weight: 600;
    margin-bottom: var(--space-4);
    border-bottom: 2px solid var(--accent);
    padding-bottom: var(--space-2);
  }
  
  .legal-section h4 {
    color: var(--fg);
    font-size: var(--fs-lg);
    font-weight: 500;
    margin: var(--space-4) 0 var(--space-2) 0;
  }
  
  .legal-section p {
    margin-bottom: var(--space-3);
  }
  
  .legal-section ul {
    margin: var(--space-3) 0;
    padding-left: var(--space-6);
  }
  
  .legal-section li {
    margin-bottom: var(--space-2);
  }
  
  .legal-section a {
    color: var(--accent);
    text-decoration: none;
    transition: color var(--dur) var(--ease);
  }
  
  .legal-section a:hover {
    color: var(--accent-2);
    text-decoration: underline;
  }
  
  /* Company Info Styles */
  .company-info {
    background: var(--glass);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--space-6);
    margin: var(--space-4) 0;
  }
  
  .company-info h4 {
    color: var(--fg);
    margin-bottom: var(--space-3);
    font-size: var(--fs-lg);
  }
  
  .company-info ul {
    margin: 0;
    padding-left: 0;
    list-style: none;
  }
  
  .company-info li {
    padding: var(--space-2) 0;
    border-bottom: 1px solid var(--border);
  }
  
  .company-info li:last-child {
    border-bottom: none;
  }
  
  .company-info strong {
    color: var(--fg);
    display: inline-block;
    min-width: 140px;
  }
  
  @media (max-width: 768px) {
    .legal-content {
      padding: 0 var(--space-4);
    }
    
    .legal-section h3 {
      font-size: var(--fs-lg);
    }
    
    .company-info {
      padding: var(--space-4);
    }
    
    .company-info strong {
      min-width: auto;
      display: block;
      margin-bottom: var(--space-1);
    }
  }
</style>