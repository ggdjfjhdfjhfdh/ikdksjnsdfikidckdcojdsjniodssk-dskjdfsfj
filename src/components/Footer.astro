---
export interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'es' } = Astro.props;

const currentYear = new Date().getFullYear();

const footerData = {
  es: {
    company: 'SESEC',
    description: 'Consultoría especializada en ciberseguridad empresarial',
    sections: {
      services: {
        title: 'Servicios',
        links: [
          { text: 'Auditorías de Seguridad', href: '/servicios#auditorias' },
          { text: 'Pentesting Avanzado', href: '/servicios#pentesting' },
          { text: 'Hardening de Sistemas', href: '/servicios#hardening' },
          { text: 'Respuesta a Incidentes', href: '/servicios#respuesta' }
