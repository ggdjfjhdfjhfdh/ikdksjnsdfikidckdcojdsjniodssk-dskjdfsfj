      links: [
        { text: 'LinkedIn', href: 'https://linkedin.com/company/sesec', icon: 'linkedin' },
        { text: 'Twitter', href: 'https://twitter.com/sesecpro', icon: 'twitter' }
      ]
    },
    copyright: `© ${currentYear} SESEC. All rights reserved.`,
    compliance: 'GDPR Compliant • ISO 27001 • ENS'
  }
};

const data = footerData[lang];
---

<footer class="footer">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Company Info -->
      <div class="footer-brand">
        <div class="brand-logo">
          <svg width="120" height="40" viewBox="0 0 120 40" fill="none">
            <path d="M20 5L35 12v14L20 33 5 26V12l15-7z" stroke="currentColor" stroke-width="2" fill="none"/>
            <circle cx="20" cy="20" r="6" stroke="currentColor" stroke-width="2" fill="none"/>
            <circle cx="20" cy="20" r="2" fill="currentColor"/>
            <text x="45" y="25" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="currentColor">Sesecpro</text>
          </svg>
        </div>
        <p class="brand-description">{data.description}</p>
        
        <!-- Contact Info -->
        <div class="contact-info">
          <h4 class="contact-title">{data.contact.title}</h4>
          <div class="contact-items">
            <a href={`mailto:${data.contact.email}`} class="contact-item">
              <svg class="contact-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              {data.contact.email}
            </a>
            <div class="contact-item">
              <svg class="contact-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              {data.contact.phone}
            </div>
            <div class="contact-item">
              <svg class="contact-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              {data.contact.address}
            </div>
          </div>
        </div>
      </div>
      
      <!-- Footer Links -->
      <div class="footer-links">
        <!-- Services -->
        <div class="footer-section">
          <h4 class="section-title">{data.sections.services.title}</h4>
          <ul class="section-links">
            {data.sections.services.links.map(link => (
              <li><a href={link.href} class="footer-link">{link.text}</a></li>
            ))}
          </ul>
        </div>
        
        <!-- Company -->
        <div class="footer-section">
          <h4 class="section-title">{data.sections.company.title}</h4>
          <ul class="section-links">
            {data.sections.company.links.map(link => (
              <li><a href={link.href} class="footer-link">{link.text}</a></li>
            ))}
          </ul>
        </div>
        
        <!-- Legal -->
        <div class="footer-section">
          <h4 class="section-title">{data.sections.legal.title}</h4>
          <ul class="section-links">
            {data.sections.legal.links.map(link => (
              <li><a href={link.href} class="footer-link">{link.text}</a></li>
            ))}
          </ul>
        </div>
        
        <!-- Social -->
        <div class="footer-section">
          <h4 class="section-title">{data.social.title}</h4>
          <div class="social-links">
            {data.social.links.map(link => (
              <a href={link.href} class="social-link" target="_blank" rel="noopener noreferrer">
                {link.icon === 'linkedin' && (
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {link.icon === 'twitter' && (
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                )}
                <span class="sr-only">{link.text}</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="copyright">{data.copyright}</p>
        <p class="compliance">{data.compliance}</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg-soft);
    border-top: 1px solid var(--border);
    margin-top: auto;
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-16);
    padding: var(--space-20) 0;
  }
  
  /* Brand Section */
  .footer-brand {
    max-width: 400px;
  }
  
  .brand-logo {
    margin-bottom: var(--space-6);
  }
  
  .brand-logo img {
    height: 40px;
    width: auto;
  }
  
  .brand-description {
    color: var(--fg-dim);
    font-size: var(--fs-base);
    line-height: 1.6;
    margin-bottom: var(--space-8);
  }
  
  /* Contact Info */
  .contact-title {
    color: var(--fg);
    font-size: var(--fs-lg);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }
  
  .contact-items {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .contact-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--fg-dim);
    text-decoration: none;
    font-size: var(--fs-sm);
    transition: color var(--dur) var(--ease);
  }
  
  .contact-item:hover {
    color: var(--accent);
  }
  
  .contact-icon {
    color: var(--accent);
    flex-shrink: 0;
  }
  
  /* Footer Links */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-8);
  }
  
  .footer-section {
    display: flex;
    flex-direction: column;
  }
  
  .section-title {
    color: var(--fg);
    font-size: var(--fs-base);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }
  
  .section-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .footer-link {
    color: var(--fg-dim);
    text-decoration: none;
    font-size: var(--fs-sm);
    transition: color var(--dur) var(--ease);
    padding: var(--space-1) 0;
  }
  
  .footer-link:hover {
    color: var(--accent);
  }
  
  /* Social Links */
  .social-links {
    display: flex;
    gap: var(--space-3);
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--glass);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    color: var(--fg-dim);
    text-decoration: none;
    transition: all var(--dur) var(--ease);
  }
  
  .social-link:hover {
    background: var(--glass-border);
    border-color: var(--accent);
    color: var(--accent);
    transform: translateY(-2px);
  }
  
  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid var(--border);
    padding: var(--space-6) 0;
  }
  
  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-4);
  }
  
  .copyright,
  .compliance {
    color: var(--fg-dim);
    font-size: var(--fs-sm);
    margin: 0;
  }
  
  .compliance {
    font-weight: 500;
  }
  
  /* Screen reader only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: var(--space-12);
    }
    
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }
  
  @media (max-width: 768px) {
    .footer-main {
      padding: var(--space-12) 0;
    }
    
    .footer-links {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: var(--space-2);
    }
  }
  
  @media (max-width: 480px) {
    .footer-main {
      padding: var(--space-8) 0;
    }
    
    .social-links {
      justify-content: center;
    }
  }
</style>