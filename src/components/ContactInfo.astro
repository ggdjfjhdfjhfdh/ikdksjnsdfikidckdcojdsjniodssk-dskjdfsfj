---
export interface Props {
  contactInfo?: {
    email: string;
    phone: string;
    location: string;
    hours: string;
    whatsapp: string;
  };
  showEmergency?: boolean;
}

const {
  contactInfo = {
    email: "info@sesec.es",
    phone: "+34 614 420 875",
    location: "Madrid, España",
    hours: "Lun - Vie: 9:00 - 18:00",
    whatsapp: "+34614420875",
  },
  showEmergency = true,
} = Astro.props;
---

<div class="contact-info">
  <div class="contact-methods">
    <div class="contact-method">
      <div class="method-icon">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
          ></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
      </div>
      <div class="method-content">
        <h3 class="method-title">Email</h3>
        <a href={`mailto:${contactInfo.email}`} class="method-value"
          >{contactInfo.email}</a
        >
      </div>
    </div>

    <div class="contact-method">
      <div class="method-icon">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
          ></path>
        </svg>
      </div>
      <div class="method-content">
        <h3 class="method-title">Teléfono</h3>
        <a
          href={`tel:${contactInfo.phone ? contactInfo.phone.replace(/\s/g, "") : ""}`}
          class="method-value">{contactInfo.phone}</a
        >
      </div>
    </div>

    <div class="contact-method">
      <div class="method-icon">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          <circle cx="12" cy="10" r="3"></circle>
        </svg>
      </div>
      <div class="method-content">
        <h3 class="method-title">Ubicación</h3>
        <span class="method-value">{contactInfo.location}</span>
      </div>
    </div>

    <div class="contact-method">
      <div class="method-icon">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12,6 12,12 16,14"></polyline>
        </svg>
      </div>
      <div class="method-content">
        <h3 class="method-title">Horario</h3>
        <span class="method-value">{contactInfo.hours}</span>
      </div>
    </div>
  </div>

  {
    showEmergency && (
      <div class="emergency-contact">
        <h3 class="emergency-title">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
            <line x1="12" y1="9" x2="12" y2="13" />
            <line x1="12" y1="17" x2="12.01" y2="17" />
          </svg>
          Emergencias 24/7
        </h3>
        <p class="emergency-description">
          Para incidentes de seguridad críticos, llama directamente. Respuesta
          garantizada en menos de 30 minutos.
        </p>
        <div class="emergency-actions">
          <button class="emergency-button" type="button" data-open-emergency>
            <svg
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
            </svg>
            Solicitar ayuda inmediata
          </button>
          <span class="emergency-response">
            Respuesta en menos de 30 minutos
          </span>
        </div>
      </div>
    )
  }
</div>

<style>
  .contact-info {
    background: var(--glass);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--sp-8);
    backdrop-filter: blur(10px);
  }

  .contact-methods {
    display: grid;
    gap: var(--sp-6);
    margin-bottom: var(--sp-8);
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: var(--sp-4);
  }

  .method-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(124, 247, 212, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    flex-shrink: 0;
  }

  .method-content {
    flex: 1;
  }

  .method-title {
    font-size: var(--fs-h4);
    font-weight: 600;
    color: var(--fg);
    margin: 0 0 var(--sp-1) 0;
  }

  .method-value {
    color: var(--fg-dim);
    text-decoration: none;
    transition: color var(--dur) var(--ease);
    display: block;
  }

  .method-value:hover {
    color: var(--accent);
  }

  .emergency-contact {
    background: rgba(255, 107, 107, 0.05);
    border: 1px solid rgba(255, 107, 107, 0.2);
    border-radius: var(--radius);
    padding: var(--sp-6);
    text-align: center;
  }

  .emergency-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--sp-2);
    font-size: var(--fs-h4);
    font-weight: 600;
    color: #ff6b6b;
    margin: 0 0 var(--sp-3) 0;
  }

  .emergency-description {
    color: var(--fg-dim);
    line-height: 1.5;
    margin: 0 0 var(--sp-4) 0;
    font-size: 14px;
  }

  .emergency-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--sp-2);
  }

  .emergency-button {
    display: inline-flex;
    align-items: center;
    gap: var(--sp-2);
    background: #ff6b6b;
    color: white;
    padding: var(--sp-3) var(--sp-6);
    border-radius: var(--radius);
    border: none;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all var(--dur) var(--ease);
  }

  .emergency-button:hover {
    background: #ff5252;
    transform: translateY(-1px);
  }

  .emergency-response {
    color: var(--fg-dim);
    font-size: 12px;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .contact-info {
      padding: var(--sp-6);
    }

    .contact-methods {
      gap: var(--sp-4);
    }

    .contact-method {
      gap: var(--sp-3);
    }

    .method-icon {
      width: 40px;
      height: 40px;
    }

    .emergency-contact {
      padding: var(--sp-4);
    }
  }
</style>
